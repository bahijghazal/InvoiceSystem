@model IEnumerable<InvoiceSystem.Models.Customer>

<h1>Customers</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Customer</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>City</th>
            <th>Country</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var customer in Model)
    {
        <tr>
            <td>@customer.Name</td>
            <td>@customer.EmailAddress</td>
            <td>@customer.PhoneNumber</td>
            <td>@customer.City</td>
            <td>@customer.Country</td>
            <td>
                <a asp-action="Edit" asp-route-id="@customer.CustomerId" class="btn btn-sm btn-primary">Edit</a>
                <a asp-action="Details" asp-route-id="@customer.CustomerId" class="btn btn-sm btn-info">Details</a>
                <a asp-action="Delete" asp-route-id="@customer.CustomerId" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
